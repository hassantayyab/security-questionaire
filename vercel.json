{
  "buildCommand": "cd frontend && npm ci && npm run build",
  "outputDirectory": "frontend/.next",
  "installCommand": "cd frontend && npm ci",
  "framework": "nextjs",
  "nodeVersion": "20.x",
  "functions": {
    "frontend/src/app/**": {
      "runtime": "nodejs20.x"
    }
  },
  "env": {
    "NEXT_PUBLIC_API_URL": "http://localhost:8000",
    "NODE_ENV": "production"
  }
}
